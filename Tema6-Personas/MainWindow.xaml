<Window x:Class="Tema6_Personas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema6_Personas"
        mc:Ignorable="d"
        Title="Personas"
        Height="450" Width="800"
        Icon="./assets/personas.ico">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="150"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Command="{Binding Path=NuevaPersonaCommand}" Margin="10,10,5,5">Nueva persona</Button>
            <Button Command="{Binding Path=ListadoPersonasCommand}" Margin="5,10,10,5">Listado de personas</Button>
        </StackPanel>
        <Border BorderBrush="Black" BorderThickness="2" Margin="10,5,10,10">
            <ContentControl Content="{Binding Path=ContenidoVentana}"/>
        </Border>
    </DockPanel>
</Window>